<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.AddExamDialogFragment">

	<ImageButton
		android:id="@+id/imageButtonBack"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_marginStart="4dp"
		android:layout_marginTop="16dp"
		android:src="@drawable/baseline_arrow_back_ios_black_24"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/screenName"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		android:text="Добавление экзамена"
		android:textAppearance="@style/TextAppearance.AppCompat.Large"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.039"
		app:layout_constraintStart_toEndOf="@+id/imageButtonBack"
		app:layout_constraintTop_toTopOf="parent" />

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/editTextDiscipline"
		style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
		android:layout_width="290dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="140dp"
		android:ems="10"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.504"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent">

		<AutoCompleteTextView
			android:id="@+id/autoCompleteDiscipline"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Дисциплина"
			android:inputType="none" />

	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/editTextExamRule"
		style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
		android:layout_width="290dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		android:ems="10"
		app:layout_constraintStart_toStartOf="@+id/editTextDiscipline"
		app:layout_constraintTop_toBottomOf="@+id/editTextDiscipline">

		<AutoCompleteTextView
			android:id="@+id/autoCompleteExamRule"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Регламент"
			android:inputType="none" />

	</com.google.android.material.textfield.TextInputLayout>

	<com.google.android.material.textfield.TextInputLayout
		android:id="@+id/editTextStartDateLayout"
		style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
		android:layout_width="290dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="24dp"
		android:ems="10"
		app:layout_constraintStart_toStartOf="@+id/editTextExamRule"
		app:layout_constraintTop_toBottomOf="@+id/editTextExamRule">

		<com.google.android.material.textfield.TextInputEditText
			android:id="@+id/editTextStartDate"
			android:focusable="false"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:hint="Время начала"
			android:inputType="textPersonName" />

	</com.google.android.material.textfield.TextInputLayout>

	<TextView
		android:id="@+id/insteadGroupsChips"
		android:layout_width="290dp"
		android:layout_height="wrap_content"
		android:layout_marginBottom="0dp"
		android:text="Пожалуйста, выберите дисциплину."
		app:layout_constraintBottom_toTopOf="@+id/chip_group"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent" />

	<TextView
		android:id="@+id/textView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Группы:"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.169"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/editTextStartDateLayout" />

	<com.google.android.material.chip.ChipGroup
		android:id="@+id/chip_group"
		android:layout_width="290dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="36dp"
		app:layout_constraintStart_toStartOf="@+id/editTextStartDateLayout"
		app:layout_constraintTop_toBottomOf="@+id/editTextStartDateLayout">

	</com.google.android.material.chip.ChipGroup>

	<Button
		android:id="@+id/buttonAddExam"
		android:layout_width="290dp"
		android:layout_height="48dp"
		android:layout_marginBottom="72dp"
		android:text="Добавить"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.504"
		app:layout_constraintStart_toStartOf="parent"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>

</androidx.constraintlayout.widget.ConstraintLayout>