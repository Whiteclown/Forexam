<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/layout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@color/period_allowance_background">

	<TextView
		android:id="@+id/tv_title"
		android:layout_width="160dp"
		android:layout_height="33dp"
		android:gravity="center_vertical"
		tools:text="Программирование"
		android:textAppearance="@style/TextAppearance.AppCompat.Body2"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.123"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/tv_start_time"
		android:layout_width="250dp"
		android:layout_height="33dp"
		android:gravity="center_vertical"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintHorizontal_bias="0.0"
		app:layout_constraintStart_toStartOf="@+id/tv_title"
		app:layout_constraintTop_toBottomOf="@+id/tv_title" />

	<ImageButton
		android:id="@+id/imageButtonDelete"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:layout_width="42dp"
		android:layout_height="40dp"
		android:layout_marginEnd="16dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/ic_delete" />

	<ImageButton
		android:id="@+id/btn_restore_state"
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:layout_width="40dp"
		android:layout_height="40dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintEnd_toStartOf="@+id/imageButtonDelete"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/ic_restore_state" />

</androidx.constraintlayout.widget.ConstraintLayout>