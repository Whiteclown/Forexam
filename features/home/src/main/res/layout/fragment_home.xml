<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.HomeFragment">

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/periodsRV"
		android:layout_width="0dp"
		android:layout_height="0dp"
		android:layout_marginTop="20dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textViewPast"
		tools:listitem="@layout/period_edit_item" />

	<TextView
		android:id="@+id/screenName"
		android:layout_width="120dp"
		android:layout_height="wrap_content"
		android:layout_marginTop="16dp"
		android:text="Экзамены"
		android:textAppearance="@style/TextAppearance.AppCompat.Large"
		app:layout_constraintEnd_toStartOf="@+id/imageButtonExit"
		app:layout_constraintHorizontal_bias="0.072"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageButton
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:id="@+id/imageButtonExit"
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:layout_marginEnd="16dp"
		android:layout_marginTop="16dp"
		android:src="@drawable/baseline_logout_black_24"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		android:contentDescription="Exit" />

	<TextView
		android:id="@+id/textViewActive"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="68dp"
		android:text="Активные"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"
		app:layout_constraintEnd_toStartOf="@+id/textViewPast"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/textViewPast"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="80dp"
		android:layout_marginTop="68dp"
		android:text="Прошедшие"
		android:textAppearance="@style/TextAppearance.AppCompat.Body1"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageButton
		style="@style/Widget.MaterialComponents.Button.OutlinedButton"
		android:id="@+id/imageButtonAdd"
		android:layout_width="48dp"
		android:layout_height="48dp"
		android:layout_marginBottom="16dp"
		android:layout_marginEnd="16dp"
		android:src="@drawable/baseline_add_circle_black_48"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:contentDescription="Add" />

</androidx.constraintlayout.widget.ConstraintLayout>